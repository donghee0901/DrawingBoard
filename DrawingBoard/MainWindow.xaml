<Window x:Class="DrawingBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingBoard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="PositionX1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="X1" VerticalAlignment="Top" Margin="629,122,0,0" Width="60"/>
        <TextBox Name="PositionY1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Y1" VerticalAlignment="Top" Margin="689,122,0,0" Width="60"/>
        <TextBox Name="PositionX2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="X2" VerticalAlignment="Top" Margin="629,145,0,0" Width="60"/>
        <TextBox Name="PositionY2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Y2" VerticalAlignment="Top" Margin="689,145,0,0" Width="60"/>
        <Image Height="59" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Source="./image/LineButton.png" MouseDown="LineButton_MouseDown"/>
        <Image Height="59" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,0,0,0" Source="./image/RectangleButton.png" MouseDown="RectangleButton_MouseDown"/>
        <Canvas Name="MainCanvas" Panel.ZIndex="-1" MouseDown="Button_MouseDown" MouseUp="Button_MouseUp">
        </Canvas>
    </Grid>
</Window>
